{
  "apps": [
    {
      "name": "Ganjoor API",
      "script": "dist/bootstrap.js",
      "env_production": {
        "NODE_ENV": "production",
        "DB_USER": "[YOUR_DB_USER]",
        "DB_PASS": "[YOUR_DB_PASS]"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
      "host": "[SERVER_IP]",
      "ref": "origin/master",
      "repo": "git@[REPO_URL]",
      "path": "[PATH_TO_DEPLOY]",
      "post-deploy": "npm install && npm run build && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
